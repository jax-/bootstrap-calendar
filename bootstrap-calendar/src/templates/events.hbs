<div class="event-list ">
  <hr />
    <h3>Event list</h3>
    <table class="table  table-hover table-striped table-responsive">
        <thead>
            <tr>
                <th>#</th>
                {{#if show_id}}
                <th>
                    Id
                </th>
                {{/if}}
                <th>
                    Date
                </th>
                <th>
                    Time
                </th>
                <th>
                    Person name
                </th>
                <th>
                    Event name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each this}}
            <tr class="{{#if unsaved}}warning{{/if}}" >
                <td>
                    <div style="background-color: {{color}}; width:18px; height:18px;"></div>
                </td>
                {{#if show_id}}
                <td>
                    {{this.eventId}}
                </td>
                {{/if}}
                <td>
                    {{formatDate this.year this.month this.day}}
                </td>
                <td>
                    {{this.timeFrom}} - {{this.timeTo}}
                </td>
                <td>
                    {{this.personName}}
                </td>
                <td>
                    {{this.eventName}}
                </td>
               <td>
                   <a href="#" class="edit-event2" data-eventid="{{this.eventId}}">Edit</a>
               </td>
              <td>
                  <a href="#" class="remove-event2" data-eventid="{{this.eventId}}">Remove</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>