<div class="calendar-panel text-center">

    <button class="btn btn-default panel-add-event" style="display:none">Add event</button>
    <button class="btn btn-default panel-edit-event" style="display:none">Edit event</button>
    <button class="btn btn-default panel-remove-event" style="display:none">Remove event</button>


    <button class="btn btn-default save-events">Save events</button>
    <label for="event-autosave">Autosave</label>
    <input type="checkbox" id="event-autosave" class="event-autosave" />

    <br/>

    <button class="btn btn-primary prev-year">Previous year</button>
    <button class="btn btn-primary prev-month">Previous month</button>  

    <h2 style="display:inline-block">
        <span class="label label-primary label-lg currentYearMonth">{{currentYearMonth}}</span>
    </h2>

    <button class="btn btn-primary next-month">Next month</button>
    <button class="btn btn-primary next-year">Next year</button>

    <button class="btn btn-primary load-people">Load people</button>
</div>